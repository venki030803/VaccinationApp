<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docweek14qa4">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="149dp"
        android:layout_height="138dp"
        android:background="@drawable/gifovalshape"
        android:src="@drawable/gif123"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="412dp"
        android:layout_height="115dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/bgallbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="110dp"
            app:srcCompat="@drawable/blueback"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="WEEK 14"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="313dp"
            tools:layout_editor_absoluteY="71dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="354dp"

        android:layout_height="253dp"
        android:background="@drawable/weekbgbox"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="109dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="20dp"
                android:text="Fine motor : Bi - Dextrous approach , Full head control"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="313dp"
                tools:layout_editor_absoluteY="71dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="317dp">

            <Button
                android:id="@+id/button11"
                android:layout_width="140dp"
                android:layout_height="52dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shadowbox"
                android:text="Yes"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="140dp"
                android:layout_height="52dp"
                android:background="@drawable/shadowbox"
                android:text="No"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgallcurve"
        android:text="Done"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />


</androidx.constraintlayout.widget.ConstraintLayout>